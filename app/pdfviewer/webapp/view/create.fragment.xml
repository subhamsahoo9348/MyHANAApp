<core:FragmentDefinition 
xmlns="sap.m" 
xmlns:core="sap.ui.core" 
xmlns:form="sap.ui.layout.form"
>
	<Dialog id="nameDialog"  title="NEW PDF" icon="sap-icon://add" >
		<content>
			<form:SimpleForm   layout="ResponsiveGridLayout" id="form">
				<form:content>
					<Label text="SAVE AS"  design="Bold" required="true" />
                    <Input  type="Text" id="pdfName"/>
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button tooltip="Add" icon="sap-icon://accept" type="Accept" press=".onSave"/>
		</beginButton>
		<endButton>
			<Button tooltip="Cancel" icon="sap-icon://cancel" type="Reject" press=".onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>